# ======================
# Server Configuration
# ======================

# Environment mode: development, production, or test
NODE_ENV=development

# Port number for the backend server
PORT=3002

# ======================
# Database Configuration
# ======================

# MongoDB connection string
# Local MongoDB: mongodb://localhost:27017/trading-platform
# MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?appName=<AppName>
MONGO_URL=mongodb://localhost:27017/trading-platform

# ======================
# Authentication
# ======================

# Secret key for JWT token signing and verification
# IMPORTANT: Use a strong, random string in production (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cookie domain for authentication (optional)
# Use for cross-subdomain authentication
# Example: .yourdomain.com (note the leading dot)
COOKIE_DOMAIN=

# ======================
# CORS Configuration
# ======================

# Frontend landing page URL (for CORS)
FRONTEND_URL=http://localhost:3001

# Dashboard application URL (for CORS and redirects)
DASHBOARD_URL=http://localhost:3000

# Additional allowed CORS origins (comma-separated)
# Example: https://staging.example.com,https://app.example.com
CORS_ORIGINS=

# ======================
# Price Update Configuration
# ======================

# Interval for updating stock prices in milliseconds
# Default: 60000 (60 seconds)
# Development: 5000-10000 (5-10 seconds) for faster testing
# Production: 30000-60000 (30-60 seconds) recommended
PRICE_UPDATE_INTERVAL_MS=60000
